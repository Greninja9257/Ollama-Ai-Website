name: Deploy Node.js App

on:
  push:
    branches:
      - main

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout Code
      uses: actions/checkout@v3

    - name: Set up Node.js
      uses: actions/setup-node@v3
      with:
        node-version: '16'

    - name: Install Dependencies Individually
      run: |
        npm install express
        npm install path
        npm install uuid

    - name: Build Project
      run: npm run build # Skip if no build step is required

    - name: Start Application
      run: npm start
